---
interface Props {
  id?: string;
  color?: string;
}
const { id = "loadingSpinner", color = "#ffffff" } = Astro.props;
---

<span
  id={id}
  class="hidden absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
>
  <div class="spinner">
    <div class="double-bounce1"></div>
    <div class="double-bounce2"></div>
  </div>
</span>

<style define:vars={{ color }}>
  .spinner {
    width: 24px;
    height: 24px;
    position: relative;
  }
  .double-bounce1,
  .double-bounce2 {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: var(--color);
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;
    animation: sk-bounce 2s infinite ease-in-out;
  }
  .double-bounce2 {
    animation-delay: -1s;
  }
  @keyframes sk-bounce {
    0%,
    100% {
      transform: scale(0);
    }
    50% {
      transform: scale(1);
    }
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
  .fade-enter {
    animation: fadeIn 0.2s ease-in;
  }
  .fade-exit {
    animation: fadeOut 0.2s ease-out;
  }
</style>
